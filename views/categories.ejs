<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-3">
<% for(let count = 0; count < categories.length ; count++ ){ %>
	
    <a href="categories/<%= categories[count].name %>" class="col text-center category__link">
        <div class="category__img shadow">
            <img src="img/<%= categories[count].image %>" alt="<%= categories[count].name %>" loading="laxy">
        </div>
        <div class="pt-1"><%= categories[count].name %></div>
    </a>


<% } %>

</div>
